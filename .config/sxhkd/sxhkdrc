#
# BSPWM hotkeys
#

# Close BSPC
super + shift + q
  bspc quit

# CLose Window
super + w
  bspc window -c

#  Move Desktop left/right
super + shift bracket{left,right}
  bspc desktop -l {prev,next}

# Balance Layout
super + b
  bspc desktop -B

# Toggle Layout Types
super {s,f}
  bspc window -t {floating,fullscreen}

# Focus Last Selected Window
super + {grave,Tab}
  bspc {window,desktop} -f last

# Swap Last Selected Window
super + apostrophe
  window -s last

# Go Through Foucs History
super + {o,i}
  bspc control --record-history off; \
  bspc window {older,newer} -f; \
  bspc control --record-history on

# Transplants Last Selected Window Onto Current Window
super + y
  bspc window -w last.manual

# Swaps Current Window With Largest Window
super + m
  bspc window  -s biggest

# Focus (Or Swap) Window In Selected Direction
super + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

# Cycles Focus
super + {_,shift +}c
  bspc window -f {next,previous}

# Rotates Layout
super + {comma,period}
  bspc desktop -C {backward,forward}

# Cycles Through Desktops
super + bracket{left,right}
  bspc desktop -f {prev,next}

# Preselects current window
super + shfit + p
  bspc window -p

# Preselects Window In Given Direction For New Window Spawn
super + ctrl + {h,j,k,l}
  bspc window -p {left,down,up,right}:

# Cancel Preselect
super + ctrl + {_,shift +}space
  bspc {window -p cancel,desktop -c}

# Change Split Ratio in given direction
super + alt + {h,j,k,l}
  bspc window -e {left -i 10,down + 10,up - 10,right +10}

super + alt + shift + {h,j,k,l}
  bspc window -e {right - 10,up + 10,down -10,left +10}

super + {_,shift + }{1-9,0}
  bspc {desktop -f,window -d} ^{1-9,10}
  
~button1
  bspc pointer -g focus

super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer -t %i %i

super + @button{1-3}
  bspc pointer -u

#
# WM independet hotkeys
#

super + t
  urxvt 

super + space
  dmenu_run -i -sb '#775759' -nb '#1f1f1f' -sf '#c0b18b' -nf '#c0b18b'

super + b
  firefox

super + Escape
  pkill -USR1 -x sxhkd

XF86Audio{Raise,Lower}Volume
  amixer -c 0 set Master 2{+,-} unmute3

XF86AudioMute
  amixer set Master toggle
